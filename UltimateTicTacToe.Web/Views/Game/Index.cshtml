<div class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Index", "Game",FormMethod.Post, new { id = "newModalForm" }))
                {               
                    <div class="form-group">
                        <label class="control-label" for="name">What do you call yourself?</label>
                        <input class="form-control" type="text" id="name" name="name" require/>
                        
                        <input type="hidden" id="playerName" value="@ViewBag.PlayerName" />
                        <input class="form-control" type="hidden" id="gameObjectString" name="gameObjectString" value="@ViewBag.Game" />
                        <input class="form-control" type="hidden" id="playerObjectString" name="playerObjectString" value="@ViewBag.Player" />
                    </div>                   
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary" id="btnSave">Save Name</button>
                        <a href="~/" type="button" class="btn btn-default">Cancel</a>
                    </div>                
                }
            </div>
        </div>
    </div>
</div>


